<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#ffdae2ff" />
            <stroke android:width="4dp" android:color="#ff4b51c4" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#ffb2b6ff" />
            <!--<gradient android:startColor="#ffb2b6ff" android:endColor="#ff5b63eb" android:angle="270" /> *** SOLID LOOKS BETTER *** -->
            <stroke android:width="4dp" android:color="#ff4b51c4" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</selector>